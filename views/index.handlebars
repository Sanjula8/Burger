<!-- Jumbotron -->
<header>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="display-4 text-center">Eat Bob's Burgers!</h1>
                    <p class="lead"></p>
                </div>
            </div>
        </div>
    </div>

</header>
<!-- End Jumbotron -->


<main class="container">
    <aside class="container">
        <div class="row text-center bg-light">
            <div class="card card-body">
                <form id="form" class="form-inline align-items-center create-form">
                    <div class="col-md-8">
                        <div class="input-group md-2">
                            <input type="text" id="inputBurger" class="form-control"
                                placeholder="Enter a burger you want to eat" />
                        </div>
                    </div>

                    <div class="col">
                        <button type="submit" id="submitBurger" class="btn btn-warning submitBurger">
                            Submit Your Burger
                        </button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </aside>
    <aside class="container">
        <div class="row mt-5">
            <div class="col-md-6">
                <h3 class="text-center">Burgers Ready to Eat</h3>
                <div class="list-group">

                    {{#each burgers}}
                    {{#unless devoured}}
                    <a href="#" class="list-group-item list-group-item-action">
                        {{id}}. {{burgerName}}
                        <button data-id="{{id}}" class="btn btn-warning ml-3 eatBurger">
                            Eat
                        </button>
                    </a>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
            <div class="col-md-6">
                <h3 class="text-center">Burgers Eaten</h3>
                <div class="list-group">
                    {{#each burgers}}
                    {{#if devoured}}
                    <a href="#" class="list-group-item list-group-item-action disabled">
                        {{id}}. {{burgerName}}
                    </a>
                    <button data-id="{{id}}" class="btn btn-warning ml-3 deleteBurger">
                        Delete
                    </button>
                    {{/if}}
                    {{/each}}

                </div>
            </div>
        </div>

    </aside>
</main>